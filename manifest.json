{
    "manifest_version": 2,
    "name": "Ticket2Branch",
    "version": "1.0.1",
    "author": "Rafael Almeida",
    "description": "Turn a sentence into a branch name. (i.e.: Enable this new feature -> enable-this-new-feature)",
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "browser_action": {
        "default_popup": "views/popup.html",
        "default_icon": {
            "16": "images/16.png",
            "32": "images/32.png",
            "48": "images/48.png",
            "128": "images/128.png"
        }
    }
}